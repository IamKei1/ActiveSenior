<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- 회원정보 타이틀 -->
        <TextView
            android:id="@+id/titleTextView"
            android:text="회원정보"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 파란 박스 정보 영역 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#5A9EFF"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"
            android:elevation="4dp"
            android:clipToOutline="true"
            android:backgroundTint="#5A9EFF"
            android:backgroundTintMode="src_in">

            <TextView
                android:id="@+id/temperatureTextView"
                android:text="나의 온도 : 36.5℃"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/welcomeTextView"
                android:text="홍길동님 환영합니다"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/statusTextView"
                android:text="현재 멘토/멘티 활동\n대기중 / 진행중"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 버튼 4개 -->
        <Button
            android:id="@+id/findButton"
            android:text="멘토/멘티 찾기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/manualButton"
            android:text="사용자 매뉴얼"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/registerButton"
            android:text="멘토/멘티 등록"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/customerServiceButton"
            android:text="고객서비스"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
