<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout

        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_marginTop="100dp"
            android:id="@+id/titleTextView"
            android:text="회원정보"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <!-- ✅ FrameLayout: 파란 박스 + Switch -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp">

            <LinearLayout
                android:background="@drawable/rounded_blue_box"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="36dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:elevation="4dp"
                android:clipToOutline="true">
            </LinearLayout>

            <!-- 오른쪽 상단 Switch -->
            <Switch
                android:id="@+id/mentorToggleSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_margin="12dp"
                android:text="멘토 활동 OFF"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:minHeight="50dp"
                android:switchMinWidth="65dp"
                android:switchPadding="12dp"
                android:trackTint="#06280A"
                android:translationZ="7dp" />
            <!-- 파란 박스 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_blue_box"
                android:backgroundTintMode="src_in"
                android:clipToOutline="true"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="36dp"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text=""
                    android:textSize="28sp" />


                <TextView
                    android:id="@+id/temperatureTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="나의 온도 : 36.5℃"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/welcomeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="홍길동님 환영합니다"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="현재 멘토/멘티 활동\n [대기중]"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />


            </LinearLayout>

        </FrameLayout>

        <!-- ✅ 버튼들 -->
        <Button
            android:id="@+id/findMentorButton"
            android:text="멘토 찾기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/findMenteeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#444444"
            android:text="멘티 찾기"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/aiMentorButton"
            android:text="AI멘토에게 물어보기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/openChatButton"
            android:text="멘토와 대화하기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>


        <Button
            android:id="@+id/manualButton"
            android:text="사용자 매뉴얼"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/customerServiceButton"
            android:text="고객서비스"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
    </LinearLayout>
</ScrollView>
